<section class="section pt-5">
  <div class="container">
    <div class="card"><div class="row has text-warning">
    <div class="columns is-centered">
      
      <div class="column is-4 mt-5 mb-5 pt-5 pb-5 has text-center">
        
        <h2 class="title is-2 mb-4 ml-5 pl-5 col-md-12">Forgot your password?</h2>
         <h6><p class="pl-4 pb-2">Please fill in your Email</p></h6>
         <div class="card-body">

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          
            <div class="control">
              <div class="field">
                <div class="mb-4">
                 <%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
               </div>
              </div>
            </div>
  
          
          <%= f.button :submit, "Send me reset password instructions", class:"button is-outlined mt-4 mb-5 btn-success" %>
          
        <% end %>
        
        <%= render "devise/shared/links" %>

    </div>
    </div>
  </div></div></div></div>
</section>
