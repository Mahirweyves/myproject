<div class="container mb-5 mt-5 pt-4 col-md-6">
  <div class="card"><div class="row has text-warning">
  
<section class="form-auth text-align-left">
  <h2>Welcome back!!! We love to have you back</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>

  <h1 class="h3 mb-4 font-weight-normal pt-3">Please Log In</h1>
  <%= f.label :email_adress %>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "email address", autocomplete: "current-email" %><br>
   
   <%= f.label :password %>
   <label for="inputPassword" class="sr-only">password</label>
  <%= f.password_field :password, autofocus: true, class: "form-control", id: "inputPassword", placeholder: "password", autocomplete: "current-password" %><br>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <div><%= f.submit "Log In", class:"btn btn-success mb-4"%></div>
<% end %>


<%= render "devise/shared/links" %>
<div class="mb-5"></div>
</section>
</div>

</main>
</div></div>
