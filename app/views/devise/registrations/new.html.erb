<div class="container mb-5 mt-5 pt-4 col-md-6">
  <div class="card"><div class="row has text-warning">
  
<section class="form-auth text-align-left">
<h3>Be cool and sign up if you dont have an account:</h3>
<div class="card-body">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h4 class="h4 font-weight-normal pt-3 text-muted">Please Sign Up</h4>

  <form class="form-signup">
       
       <%= f.label :Username %>
       <label for="name"></label>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Username" %>
        
        <%= f.label :Email %>
        <label for="email"></label>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Email", tabindex: "2" %>

         <%= f.label :telephone %>
        <label for="telephone"></label>
        <%= f.text_field :telephone, class: "form-control", placeholder: "Enter Telephone number", tabindex: "2" %>
      
        <%= f.label :password %>
        <label for="password"></label>
          <% if@minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <%= f.password_field :password, class: "form-control", tabindex: "2", placeholder: "Password", required: true %>
      
      <%= f.label :password_confirmation %>
      <label for="password_confirmation"></label>
      <%= f.password_field :password_confirmation, class: "form-control", tabindex: "2", placeholder: "Password Confirmation", required: true %>
     
    <div class="checkbox">
    <label>
    <p><%= f.check_box :terms_and_conditions %> By creating an account you agree to our <a href="/trades/terms_and_conditions" style="color:dodgerblue">Terms & Privacy</a>.</p></label></div>

    <!--<div class="checkbox">
    <label>
      <#%= f.check_box :terms_and_conditions %><strong> I accept the terms and conditions<strong>
    </label></div>-->

</label><br>

      <div><%= f.submit "Sign up", class:"btn btn-success"%></div>

  </form>
<%= render "devise/shared/links" %>
<div class="mb-5"></div>
</div>
</div>
</div>
<% end %>


</section>
</main></div></div>



