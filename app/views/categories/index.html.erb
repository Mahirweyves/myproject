<div class="container-fluid">
<div class="col-md-4 mt-5 mb-5 text-center">
<p id="notice"><%= notice %></p>

<h1 class="mb-3">Categories</h1>

<% if has_role?(:admin) %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr> 
        <td><%= category.category %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class:" btn btn-success mb-5" %>
</div>

<% else %>
<p class="has-rext-center text-white mb-5 btn bg-danger"> Sorry! You don't have right to access this page. </p>
<% end %>
</div>