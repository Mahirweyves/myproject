<%= yield (:body_class) %>
    <% if flash[:notice] %>
      <div class="btn btn-sm btn-success notification is-success global-notification list-group mt-4 pt-3">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>    

    <% if flash[:alert] %>
    <div class="btn btn-sm btn-danger notification is-danger global-notification list-group">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>
 
        <li class="nav-item dropdown btn-primary mt-3 has text-dark">
        <strong class="nav-link dropdown-toggle has text-white" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Search by category</strong>
        <div class="dropdown-menu has text-center" aria-labelledby="dropdown01">
    
       <div class="mr-md-12">
       <div class="card">
       <div class="card-header">
          Categories
        </div>
        <ul class="list-group has text-left bg-primary">

        <% @categories.each do |category| %>
 
         <li>
          <%= link_to category.category, trades_path(:cate => category.id), class: "has text-white" %>

         <span class="badge badge-primary badge-pill has text-dark bg-warning"><%= category.trades.count %></span>
         </li>  
        <% end %>
        </ul></li>
        </div>
        </div></div></div> 


